extends layout

block content
  .container(style="max-width: 800px; margin: 0 auto; text-align: center; padding: 2rem;")
    .header
      h1(style="font-size: 2.5rem; color: #2c3e50; margin-bottom: 0.5rem;") Population Reporting System
      p.lead-text(style="font-size: 1.2rem; color: #7f8c8d; margin-bottom: 1.5rem;") Discover insights into population data across various regions, from countries to cities.
    .action-buttons
      p(style="font-size: 1rem; color: #34495e; margin-bottom: 2rem;") Start exploring reports by filtering based on geographic categories.

    .report-links
      ul(style="list-style: none; padding: 0;")
        li(style="display: inline-block; margin: 0 1rem;")
          a.button(href='/countries' style="text-decoration: none; padding: 0.75rem 1.5rem; border: 2px solid #2980b9; border-radius: 25px; color: #2980b9; font-weight: bold; transition: all 0.3s ease;") Country Reports
        li(style="display: inline-block; margin: 0 1rem;")
          a.button(href='/cities' style="text-decoration: none; padding: 0.75rem 1.5rem; border: 2px solid #2980b9; border-radius: 25px; color: #2980b9; font-weight: bold; transition: all 0.3s ease;") City Reports
