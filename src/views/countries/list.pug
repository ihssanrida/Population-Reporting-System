
extends layouts/main

block content
  h2= title
  table
    thead
      tr
        th Code
        th Name
        th Continent
        th Region
        th Population
        th Capital
    tbody
      each country in countries
        tr
          td= country.Code
          td= country.Name
          td= country.Continent
          td= country.Region
          td= country.Population
          td= country.Capital || 'N/A